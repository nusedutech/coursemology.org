<div class="row main-content" >
	<div style="position: relative; margin-left: 30px;">
		<a class="btn btn-navbar collapsed sidebar-collapse">
			<span class="icon-chevron-down"></span>
		</a>
	</div>

  <div class="span2 sidebar">
    <%= render "layouts/course_side_bar" %>
  </div>

  <div id="mainscreen-control" class="span10 span-content">
    <div class="course-title">
      <a href="<%= main_app.course_path(@course) %>">
        <%= @course.title %>
      </a>
    </div>
    <% if flash[:notice] %>
      <div class="alert alert-success">
        <%= flash[:notice].html_safe %>
      </div>
    <% end %>
    <% if flash[:error] %>
        <div class="alert alert-error">
          <%= flash[:error].html_safe %>
        </div>
    <% end %>
    <div class="content" style="width:100%; margin-bottom:-48px;"/>
    <%= yield %>
  </div>
  <%= render "layouts/course_popup" %>
</div>
